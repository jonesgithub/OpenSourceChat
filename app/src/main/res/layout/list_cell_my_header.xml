<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/list_cell_bg"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_portrait"
        android:background="@drawable/icon_dface"
        android:layout_alignParentLeft="true"
        android:contentDescription="头像"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_toRightOf="@id/iv_portrait"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            tools:text="火蚁"
            android:textColor="@color/frist_text_color"
            android:contentDescription="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_email"
            tools:text="邮箱地址"
            android:textColor="@color/second_text_color"
            android:layout_marginTop="3dp"
            android:contentDescription="邮箱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_my_qr_code"
        android:contentDescription="头像"
        android:layout_width="15dp"
        android:layout_height="15dp" />

</RelativeLayout>